<h1 class="head">Sign Up Form</h1>

<% if flash[:errors]%>
    <% flash[:errors].each do |error|%>
        <div class="alert alert-danger"><%= error%></div>
    <% end %>
<%end%>

<section class="form" >
<%= form_for @person do |f|%>

    <div class="col-sm-3">
    <%=f.label :name, "Full Name: "%>  
    <%=f.text_field :name, class:"form-control"%></div>
    <br>

    <div class="col-sm-1">
    <%=f.label :age, "Age: "%> 
    <%=f.number_field :age, in:16..70, class:"form-control"%></div>
    <br>
    
  
    <div class="col-sm-1">
    <%=f.label :gender, "Gender: "%>
    <%=f.select :gender, ["Male", "Female"], class: "form-select"%>
    </div>
    <br>

    <div class="col-sm-3">
    <%=f.label :email, "Email: "%>  
    <%=f.text_field :email, class:"form-control"%></div>
    <br>
    
    <div class="col-sm-3">
    <%=f.label :username, "Username: "%>  
    <%=f.text_field :username, class:"form-control"%></div>
    <br>
    
    <div class="col-sm-3">
    <%=f.label :password, "Password: "%>  
    <%=f.password_field :password, class:"form-control"%></div>
    <br>
    
    <div class= "d-grid col-1">
    <%=f.submit "Signup", class:"btn btn-primary" %></div>
<%end%>
</section>


  
