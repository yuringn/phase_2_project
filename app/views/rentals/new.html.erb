<h1> Lets rent a puppy! </h1>

<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p><%= error %></p>
  <% end %>
<% end %>
<br>

<%= form_for @rental do |f|%>
      Puppy to Rent: <%=flash[:puppy_name]%>

      <%= f.hidden_field :puppy_id, value: flash[:puppy_id] %>      <br><br>

      <%= f.label :time, "Reserve a Time:" %>
      <%= f.number_field :time, in: 1..24 %>
      <br><br>
      <%= f.label :cost %>
      $<%= @rental.new_cost %>
    <br><br>
<%=f.submit%>

<%end%>